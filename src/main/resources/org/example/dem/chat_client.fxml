<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.dem.ChatClientController" spacing="10" alignment="CENTER">
    <TextArea fx:id="chatArea" editable="false" prefHeight="200" prefWidth="400"/>
    <TextField fx:id="messageField" promptText="Type your message here..." onAction="#sendMessage"/>
    <Button fx:id="sendButton" text="Send" onAction="#sendMessage"/>
</VBox>
